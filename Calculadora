
import java.util.Scanner;

public class Calculadora {

    public static void main(String[] args) {
        Scanner tcl = new Scanner(System.in);
        int num1;
        int num2;
        int calc;
        int escolha;

        while (true){
        System.out.println("-Calculadora Básica- \n"
                + "1 - Somar \n"
                + "2 - Subtração \n"
                + "3 - Multiplicação \n"
                + "4 - Divisão");
        escolha = tcl.nextInt();

        
            switch (escolha) {
                case 1:
                    System.out.println("Insira o primeiro valor:");
                    num1 = tcl.nextInt();
                    System.out.println("Insira o segundo valor:");
                    num2 = tcl.nextInt();
                    calc = (num1 + num2);
                    System.out.println("Resultado: " + calc);
                    break;
                case 2:
                    System.out.println("Insira o primeiro valor:");
                    num1 = tcl.nextInt();
                    System.out.println("Insira o segundo valor:");
                    num2 = tcl.nextInt();
                    calc = (num1 - num2);
                    System.out.println("Resultado: " + calc);
                    break;
                case 3:
                    System.out.println("Insira o primeiro valor:");
                    num1 = tcl.nextInt();
                    System.out.println("Insira o segundo valor:");
                    num2 = tcl.nextInt();
                    calc = (num1 * num2);
                    System.out.println("Resultado: " + calc);
                    break;
                case 4:
                    System.out.println("Insira o primeiro valor:");
                    num1 = tcl.nextInt();
                    System.out.println("Insira o segundo valor:");
                    num2 = tcl.nextInt();
                    calc = (num1 / num2);
                    System.out.println("Resultado: " + calc);
                    break;
                default:
                    System.out.println("Opção incorreta!");
                    break;
            }
        }
    }
}
